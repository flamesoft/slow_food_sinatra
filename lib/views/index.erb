<form action="/checkout" method="post" id="checkout_form">
  <input type="submit" value="Check out" id="check_out"/>
</form>

<% if @dishes.any? %>
  <form action="/" method="post" id="order_form">
    <table style="width:48%">
      <% @dishes.each do |dish| %>
        <tr>
          <td><font size="5"><%= dish[:name]%></font></td>
          <td>
            <input type="hidden" name="order_item[][dish_id]" value="<%=dish[:id]%>" />
          </td>
          <td>
            <input type="text" name="order_item[][quantity]" placeholder="Quantity" id="<%='quantity_'.concat(dish[:name]).tr(' ','')%>"/>
          </td>
          <td>
            <input type="submit" value="Add" id="<%='add_'.concat(dish[:name]).tr(' ','')%>" class="success button"/>
          </td>
        </tr>
      <% end %>

  </form>
<% else %>
  <p>No dishes in the system</p>
<% end %>

<footer class="footer">
  <div class="row full-width">
    <div class="small-12 medium-3 large-4 columns">

    <% if @restaurants.any? %>
      <% @restaurants.each do |restaurant| %>
       <p><%= restaurant[:name]%></p>
       <p><%= restaurant[:address]%></p>
       <p><%= restaurant[:description]%></p>
      <% end %>
    <% end %>
  </div>
  </div>
</footer
